SUDO_ACCESS=""

if [ $(test -r /var/run/docker.sock; echo "$?") -ne 0 ]; then
    SUDO_ACCESS="sudo"
fi

$SUDO_ACCESS docker run -it --rm -v ./:/app/ -v ./data/images/:/usr/src/app/images/ --env-file .env --network soul-connection node:22.7.0 node /app/backend/utils/fetch.js

sudo chown $USER:$USER -R ./data/images/

cp profile.png ./data/images/