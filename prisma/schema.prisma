generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum UserType {
    Client
    Employee
    Manager
}

model Clothe {
    id                  Int     @id @default(autoincrement())
    type                String
    image_path          String
}

model User {
    id                  Int     @id @default(autoincrement())
    email               String  @unique
    password            String                                                                      //Hashing !
    type                UserType
    name                String
    surname             String
    birth_date          DateTime
    image_path          String
    gender              String
    astrological_sign   String?                                                                     //Client
    coach               User?   @relation("CoachToClient", fields: [coach_id], references: [id])    //Client
    coach_id            Int?                                                                        //Client
    description         String?                                                                     //Client
    client_list         User[] @relation("CoachToClient")                                           //Employee
    work                String?                                                                     //Employee
}

